{% extends 'CharlotteStaffBundle::layout.html.twig' %}

{% trans_default_domain 'CharlotteStaffBundle' %}

{% block content %}
    {% for message in app.session.flashbag.get('valid') %}
        <br /><br />
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.flashbag.get('error') %}
        <br /><br />
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <strong>Attention ! </strong>{{ message }}
        </div>
    {% endfor %}
    <div class="bs-callout bs-callout-info col-md-12">
        <h3>Administration des groupes utilisateurs</h3>
        {{ form_start(TeamForm) }}
        {{ form_errors(TeamForm) }}
            {{ form_rest(TeamForm) }}
            <button type="submit" class="btn btn-default">Ok</button>
        {{ form_end(TeamForm) }}
    </div>

{% endblock %}